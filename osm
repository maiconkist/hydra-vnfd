#!/usr/bin/env bash

case "$1" in
   "i")
      osm nsd-delete basic_nsd
      osm vnfd-delete hydra_aas_server

      osm vnfd-create hydra_server_vnf.tar.gz
      osm nsd-create  basic_ns.tar.gz
   ;;
   "l")
      osm vnfd-list
      osm nsd-list
      osm ns-list
   ;;
   "d")
      osm nsd-delete basic_nsd
      osm vnfd-delete hydra_aas_server
   ;;
   "nc")
      ./osm i
      osm ns-create --ns_name basic --nsd_name basic_nsd --vim_account wins_5g_v2
   ;;
   "nd")
      osm ns-delete basic
   ;;
   "jd")
      juju remove-machine --force $2
   ;;
   *)
      echo "[i]nstall\r\n[l]ist\n[d]elete\n[nc]s-create\n[nd]s-delete\n[jd]uju-delete"
   ;;
esac
